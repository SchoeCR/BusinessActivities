@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <img src="RESLOGO01_jpeg.jpg" alt="Resolute Logo" style="height:30px;"/>
            @if (IsEnquiryPage)
            {
                <div class="d-flex">
                    <Tabs EnableFadeEffect="true">
                        <Tab Title="New" Active="true">
                            <Content>
                                <a href="/enquiry">New Enquiry</a>
                            </Content>
                        </Tab>
                    </Tabs>
                </div>
            }
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled error has occurred. See browser dev tools for details.
    </environment>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool IsHomePage => Navigation.Uri.EndsWith(value: "/");
    private bool IsEnquiryPage => Navigation.Uri.EndsWith(value: "/enquiry");
    
}